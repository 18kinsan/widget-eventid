    <TextView
        android:id="@+id/mounth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="This Mounth"
        android:textColor="#000"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/poster"
